{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "sourceMap": true,
    "rootDir": "./api",
    "removeComments": true,
    "strict": true,
    "noImplicitAny": false,
    "allowJs": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true
  },
  "include": ["api/**/*"],
  "exclude": ["api/dist/**/*"]
}
